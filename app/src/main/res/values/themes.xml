    <!--TabLayout Theme-->

    <style name="TabLayoutThemes" parent="Widget.Design.TabLayout">

        <item name="tabIndicatorColor">#FFFFFF
        </item> <!-- tabIndicatorColor is color of underline each tabs -->
        <item name="tabIndicatorHeight">2dp
        </item>  <!-- tabIndicatorHeight is height of underline -->
        <item name="tabSelectedTextColor">#212121
        </item>    <!-- color of text when tabs be selected -->


    </style>

    <style name="ToolbarColored" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#FFF</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#FFF</item>
        <item name="android:textColorPrimary">#FFF</item>
        <item name="android:textColorSecondaryInverse">#FFF</item>
    </style>

