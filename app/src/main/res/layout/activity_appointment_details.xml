<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    tools:context=".Appointments.AppointmentDetailsActivity">

    <include
        android:id="@+id/Ll1111"
        layout="@layout/common_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Ll1111"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/recentAppoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardMaxElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/doctorImageP"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/doctor_avatar_org" />

                    <TextView
                        android:id="@+id/PatientName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif-medium"
                        android:text="Mr. Aashish Joshi"
                        android:textAlignment="center"
                        android:textAppearance="@android:style/TextAppearance.Large"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/PatientMobileNo_Tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"
                        android:text=""
                        android:textAlignment="center"
                        android:textAppearance="@android:style/TextAppearance.Large"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/updateAppoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recentAppoint"
                android:layout_margin="8dp"
                android:padding="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardMaxElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/appointments"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_weight=".1"
                            android:src="@drawable/appointment_detail_active"
                            app:tint="@color/oldCanBtn" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_weight=".9"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="start"
                            android:paddingLeft="16dp"
                            android:text="Appointment Details"
                            android:textAlignment="viewStart"
                            android:textAppearance="@android:style/TextAppearance.Large"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/treatments"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_weight=".1"
                            android:src="@drawable/history"
                            app:tint="@color/oldCanBtn" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_weight=".9"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="start"
                            android:paddingLeft="16dp"
                            android:text="Treatment History"
                            android:textAlignment="viewStart"
                            android:textAppearance="@android:style/TextAppearance.Large"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/newTreatment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_weight=".1"
                            android:src="@drawable/treatment" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_weight=".9"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="start"
                            android:paddingLeft="16dp"
                            android:text="New Treatment "
                            android:textAlignment="viewStart"
                            android:textAppearance="@android:style/TextAppearance.Large"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/updateAppointments"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_weight=".1"
                            android:src="@drawable/appointment_update" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_weight=".9"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="start"
                            android:paddingLeft="16dp"
                            android:text="Update Appointment"
                            android:textAlignment="viewStart"
                            android:textAppearance="@android:style/TextAppearance.Large"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/recentAppointments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/updateAppoints"
                android:layout_margin="8dp"
                android:padding="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardMaxElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textRecent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="start"
                        android:padding="8dp"
                        android:text="Recent Appointments"
                        android:textAlignment="viewStart"
                        android:textAppearance="@android:style/TextAppearance.Large"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textRecent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:layout_gravity="center"
                            android:layout_weight=".1"
                            android:src="@drawable/doctor_avatar_org" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".9"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/doctorName_TvM"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="sans-serif-medium"
                                android:text="Dr. Ravi Paul "
                                android:textAlignment="center"
                                android:textAppearance="@android:style/TextAppearance.Large"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/status_Tvm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="sans-serif-medium"
                                android:text="Scheduled"
                                android:textAlignment="center"
                                android:textAppearance="@android:style/TextAppearance.Large"
                                android:textColor="@color/oldCanBtn"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/appointmentDate_TvM"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="sans-serif-medium"
                                android:text="23-July-2021"
                                android:textAlignment="center"
                                android:textAppearance="@android:style/TextAppearance.Large"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/appointmentTime_TvM"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="sans-serif-medium"
                                android:text="01:30 PM - 2:00 PM"
                                android:textAlignment="center"
                                android:textAppearance="@android:style/TextAppearance.Large"
                                android:textColor="@color/oldCanBtn"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/patientType_TvM"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="sans-serif-medium"
                                android:text="RCT"
                                android:textAlignment="center"
                                android:textAppearance="@android:style/TextAppearance.Large"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/treatmentdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recentAppointments"
                android:layout_margin="8dp"
                android:padding="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardMaxElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/textTreatment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".5"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="start"
                            android:padding="8dp"
                            android:text="Treatment Details"
                            android:textAlignment="viewStart"
                            android:textAppearance="@android:style/TextAppearance.Large"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".5"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="start"
                            android:padding="8dp"
                            android:text="No data Available"
                            android:textAlignment="viewStart"
                            android:textAppearance="@android:style/TextAppearance.Large"
                            android:textColor="@color/oldCanBtn"
                            android:textSize="18sp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textTreatment"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="start"
                                android:text="Symptoms"
                                android:textAlignment="viewStart"
                                android:textAppearance="@android:style/TextAppearance.Large"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/txt_Symptoms"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="start"
                                android:text="No Symptoms Available"
                                android:textAlignment="viewStart"
                                android:textAppearance="@android:style/TextAppearance.Large"
                                android:textColor="@color/oldCanBtn"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="start"
                                android:text="Treatments"
                                android:textAlignment="viewStart"
                                android:textAppearance="@android:style/TextAppearance.Large"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/txt_treatment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="start"
                                android:text="No Treatment Available"
                                android:textAlignment="viewStart"
                                android:textAppearance="@android:style/TextAppearance.Large"
                                android:textColor="@color/oldCanBtn"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="start"
                                android:text="Medicine Prescribed"
                                android:textAlignment="viewStart"
                                android:textAppearance="@android:style/TextAppearance.Large"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/txt_medPrescribed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="start"
                                android:text="No Medicine Prescribed"
                                android:textAlignment="viewStart"
                                android:textAppearance="@android:style/TextAppearance.Large"
                                android:textColor="@color/oldCanBtn"
                                android:textSize="16sp" />

                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/treatmentdetails"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardMaxElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/textDocuments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Related Documents"
                            android:textAlignment="center"
                            android:textAppearance="@android:style/TextAppearance.Large"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textDocuments"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="start"
                                android:text="X-Rays"
                                android:textAlignment="viewStart"
                                android:textAppearance="@android:style/TextAppearance.Large"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end"
                                android:text="No Report Available"
                                android:textAlignment="textEnd"
                                android:textAppearance="@android:style/TextAppearance.Large"
                                android:textColor="@color/oldCanBtn"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="start"
                                android:text="Prescriptions"
                                android:textAlignment="viewStart"
                                android:textAppearance="@android:style/TextAppearance.Large"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end"
                                android:text="No Report Available"
                                android:textAlignment="textEnd"
                                android:textAppearance="@android:style/TextAppearance.Large"
                                android:textColor="@color/oldCanBtn"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="start"
                                android:text="Other Documents"
                                android:textAlignment="viewStart"
                                android:textAppearance="@android:style/TextAppearance.Large"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end"
                                android:text="No Report Available"
                                android:textAlignment="textEnd"
                                android:textAppearance="@android:style/TextAppearance.Large"
                                android:textColor="@color/oldCanBtn"
                                android:textSize="16sp" />

                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- <LinearLayout
                 android:id="@+id/Ln_1111111"
                 android:layout_width="match_parent"
                 android:layout_height="240dp"
                 android:layout_below="@+id/updateAppoints"
                 android:layout_marginTop="4dp"
                 android:orientation="vertical"
