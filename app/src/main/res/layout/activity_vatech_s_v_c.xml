<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    tools:context=".PMSSetup.VatechSVCActivity">

    <include
        android:id="@+id/Ll1111"
        layout="@layout/common_toolbar" />

    <LinearLayout
        android:id="@+id/Ll_444"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Ll1111"
        android:layout_marginTop="4dp"
        android:layout_weight="0.50"
        android:orientation="vertical"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <LinearLayout
            android:id="@+id/Ll_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_SearchingByName"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:layout_weight=".8"
                android:background="@drawable/textbox_border"
                android:hint="Search Support Reason By Name"
                android:inputType="text|textNoSuggestions"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:textColorHint="#b3b3b3"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/Ll_44444"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Ll_444"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="8dp"
        android:paddingBottom="2dp"
        android:text="Requested Support"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/Ln_1111111"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_below="@+id/Ll_44444"
        android:layout_marginTop="2dp"
        android:layout_weight="0.50"
        android:orientation="vertical"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <TextView
            android:id="@+id/textSupportsData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="8dp"
            android:text="No Support Data Available"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/requestedListRc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingClass" />

    </LinearLayout>

    <TextView
        android:id="@+id/Ln_000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Ln_1111111"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="8dp"
        android:paddingBottom="2dp"
        android:text="Raise New Support"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Ln_000000"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingBottom="2dp"
                    android:text="Support Type"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/supportTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/sort_spinner"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:textColorHint="#b3b3b3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingBottom="2dp"
                    android:text="Reason Type"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/reasonTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/sort_spinner"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:textColorHint="#b3b3b3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Ll_44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Ll_33"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingBottom="2dp"
                    android:text="Supporting Details"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/supportDetails_ET"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/textbox_border"
                    android:gravity="top|left"
                    android:hint=""
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:minLines="4"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:scrollHorizontally="false"
                    android:textColorHint="#b3b3b3"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Ll_7"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <LinearLayout
                    android:id="@+id/linear9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Ll_7"
                    android:layout_marginRight="8dp"
                    android:layout_weight="0.50"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_AddSupport"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/btn_radius_color"
                        android:text="Add Support"
                        android:textAllCaps="false"
                        android:textColor="#FFF"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Ll_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Ll_7"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0.50"
                    android:gravity="right"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btn_Cancel"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_radius_cancel"
                        android:gravity="center"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textColor="#FFF"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>